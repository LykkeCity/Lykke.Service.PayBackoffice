@model LkeServices.Messages.EmailTemplates.ViewModels.SwiftCashOutRequestTemplate

@{
    var confirmDeclineUrl = $"{Model.ApiHost}/api/CashOutSwiftRequest/{Model.CashOutRequestId}";

    var confirmUrl = $"{Model.ApiHost}/api/CashOutSwiftRequest/{Model.CashOutRequestId}?result=true&clientid={Model.ClientId}";
    var declineUrl = $"{Model.ApiHost}/api/CashOutSwiftRequest/{Model.CashOutRequestId}?result=false&clientid={Model.ClientId}";
}


<!DOCTYPE html>
<html>

<head>
    <title>Cash out request</title>
</head>

<body style="background-color: #F4F6F7; font-family: Geneva, Arial, Helvetica, sans-serif;">

<div style="margin: 20px auto; width: 600px;">
    <img src="https://lkefiles.blob.core.windows.net/images/emails/logo_emails.png" height="60" alt="Lykke logo"/>
</div>

<table style="margin: auto; width: 600px; border: 1px solid #E5E7EA; background-color: #fff;">
    <tr>
        <td style="padding-top: 50px;"></td>
    </tr>

    <tr>
        <td style="text-align: center; padding: 0 40px 0 40px;">
            <img src="https://lkefiles.blob.core.windows.net:443/images/emails/withdraw-icon.png" width="300" alt="Letter image"/>
        </td>
    </tr>

    <tr>
        <td style="text-align: center;">
            <h1 style="font-size: 2.4em;">Cash Out Request</h1>
        </td>
    </tr>

    <tr>
        <td style="padding: 0 40px 0 40px">
            <p style="font-size: 1.2em; color: #3F4D60; line-height: 180%;">
                Dear @Model.FullName, we have received your SWIFT cash out request of @Model.Amount @Model.AssetId.
                This request was passed to the corresponding department and will be processed soon.
            </p>
        </td>
    </tr>

    <tr>
        <td style="padding: 20px 40px 60px 40px; text-align: center;">
            <table style="border-collapse: collapse">

                <tr style="border-top: 1px solid #8C94A0; border-bottom: 1px solid #8C94A0;">
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #8C94A0;">
                                SWIFT / ABA Routing
                            </span>
                    </td>
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #3F4D60;">
                                @Model.Bic
                            </span>
                    </td>
                </tr>

                <tr style="border-top: 1px solid #8C94A0; border-bottom: 1px solid #8C94A0;">
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #8C94A0;">
                                Name of the bank
                            </span>
                    </td>
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #3F4D60;">
                                @Model.BankName
                            </span>
                    </td>
                </tr>

                <tr style="border-top: 1px solid #8C94A0; border-bottom: 1px solid #8C94A0;">
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #8C94A0;">
                                Beneficiary's Account number (IBAN)
                            </span>
                    </td>
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #3F4D60;">
                                @Model.AccNum
                            </span>
                    </td>
                </tr>
                <tr style="border-top: 1px solid #8C94A0; border-bottom: 1px solid #8C94A0;">
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #8C94A0;">
                                Name of the accountholder
                            </span>
                    </td>
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #3F4D60;">
                                @Model.AccName
                            </span>
                    </td>
                </tr>

                <tr style="border-top: 1px solid #8C94A0; border-bottom: 1px solid #8C94A0;">
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #8C94A0;">
                                Address of the accountholder
                            </span>
                    </td>
                    <td style="padding: 15px 0 15px 0;" width="260">
                        <span style="font-size: 1.1em; color: #3F4D60;">
                                @Model.AccHolderAddress
                            </span>
                    </td>
                </tr>


                <tr>
                    <td colspan="2">
                        <br /><br /><br />
                        Please confirm all data is correct
                        <br/>
                    </td>
                </tr>

                <tr>
                    <td style="text-align: right">
                        <a style="display: inline-block; width: 75px; height: 20px; background: #4CAF50; padding: 5px; text-align: center; border-radius: 5px; color: white; font-weight: bold; " href="@confirmUrl">CONFIRM</a>
                    </td>
                    <td style="text-align: left">
                        <a style="display: inline-block; width: 75px; height: 20px; background: #f44336; padding: 5px; text-align: center; border-radius: 5px; color: white; font-weight: bold; " href="@declineUrl">CANCEL</a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>



<table style="margin: auto; width: 600px; border: none;">
    <tr>
        <td style="padding: 10px 40px 20px 40px; text-align: center; font-size: 0.9em; color: #8C94A0; margin: 20px 0 40px 0;">
            <p>&copy; Lykke @Model.Year. All rights reserved. Need help? Contact &mdash; <a style="color: #8C94A0;" href="mailto:support@lykke.com">support@lykke.com</a>
            </p>
            <p>Let's be friends in social networks!</p>
            <a href="https://www.facebook.com/groups/542506412568917/"><img style="margin-right: 10px" src="https://lkefiles.blob.core.windows.net/images/emails/fb_icon.png" height="25" alt="facebook"/></a>
            <a href="https://twitter.com/LykkeCity"><img style="margin-right: 10px" src="https://lkefiles.blob.core.windows.net/images/emails/twitter_icon.png" height="25" alt="twitter"/></a>
            <a href="https://www.youtube.com/channel/UCmMYipGdKMF0kzfaE-PXsNQ"><img style="margin-right: 10px" src="https://lkefiles.blob.core.windows.net/images/emails/youtube_icon.png" height="25" alt="youtube"/></a>
        </td>
    </tr>
</table>

</body>
</html>