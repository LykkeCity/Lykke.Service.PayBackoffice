@using BackOffice.Translates
@model BackOffice.Areas.LykkePay.Models.MarkupsListViewModel
@if (Model.Markups != null && Model.Markups.Any())
{
    @Html.RenderPagination(Model.PageSize, Model.Count, Model.CurrentPage, "MarkupsList", "frmMarkupsPage", "markupsList")
    <table class="table table-striped">
        <tr>
            <th>
                AssetPairId
            </th>
            <th>
                DeltaSpread
            </th>
            <th>
                FixedFee
            </th>
            <th>
                Percent
            </th>
            <th>
                Pips
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Markups)
                {
            <tr>
                <td>
                    @item.AssetPairId
                </td>
                <td>
                    @item.DeltaSpread
                </td>
                <td>
                    @item.FixedFee
                </td>
                <td>
                    @item.Percent
                </td>
                <td>
                    @item.Pips
                </td>
                <td style="text-align: right">

                    @if (Model.IsEditAccess || Model.IsFullAccess)
                    {
                        <button class="btn btn-xs btn-default btn-raised"
                                onclick="ui.showDialog('@Url.Action("AddOrEditMarkupDialog")', { assetPairId: '@item.AssetPairId', selectedMerchant: '@Model.SelectedMerchant' });">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="row">
        <p>@Phrases.NoRecordsFound</p>
    </div>
}

