@using BackOffice.Models
@model BackOffice.Areas.LykkePay.Models.Assets.AddGeneralSettingsDialogViewModel

@{
    Layout = "~/Views/Shared/_PersonalAreaDialog.cshtml";
}
@{
    IEnumerable<ItemViewModel> networkList = Model.NetworkList.
        Select(m => new ItemViewModel { Id = m, Title = m }).ToArray();
}
<form id="frmAddGeneralSettings" autocomplete="off">
    <div id="errorMessage"></div>
    <div class="form-group">
        @Html.RenderInputWithLabelOnTop("AssetDisplayId", "AssetDisplayId", Model.AssetDisplayId)
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(x => x.PaymentAvailable) PaymentAvailable
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(x => x.SettlementAvailable) SettlementAvailable
    </div>
    <div class="form-group">
        @Html.RenderSelect2("Network:", "SelectedNetwork", networkList, false, "Select network...")
    </div>
</form>

@Html.RenderSaveCancelButtonPair(Url.Action("AddGeneralSettings"), "#frmAddGeneralSettings")