@using BackOffice.Translates

<ul id="tabs" class="nav nav-tabs">
    <li id="assetPayment"><a data-toggle="tab" onclick="selectTab(this.parentNode.id, '@Url.Action("AssetPayment")')">Payment</a></li>
    <li id="assetSettlement"><a data-toggle="tab" onclick="selectTab(this.parentNode.id, '@Url.Action("AssetSettlement")')">Settlement</a></li>
    <li id="assetByMerchant"><a data-toggle="tab" onclick="selectTab(this.parentNode.id, '@Url.Action("AssetByMerchant")')">Assets by merchants</a></li>
</ul>

<div id="assetPage"></div>

<script>
    function selectTab(tabId, url) {
        if ($('#' + tabId).hasClass('active'))
            return;
        $('#tabs').children('li').each(function() {
            (this.id === tabId) && $('#' + this.id).addClass('active') || $('#' + this.id).removeClass('active');
        });
        requests.doRequest({ url: url, divResult: '#assetPage' });
    }
    selectTab('assetPayment', '@Url.Action("AssetPayment")');
</script>