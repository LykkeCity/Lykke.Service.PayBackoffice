@using BackOffice.Translates

<ul id="tabs" class="nav nav-tabs">
    <li id="generalSettings"><a data-toggle="tab" onclick="selectTab(this.parentNode.id, '@Url.Action("GeneralSettings")')">General settings</a></li>
    <li id="merchantsSettings"><a data-toggle="tab" onclick="selectTab(this.parentNode.id, '@Url.Action("MerchantsSettings")')">Merchant settings</a></li>
</ul>

<div id="assetPage"></div>

<script>
    function selectTab(tabId, url) {
        if ($('#' + tabId).hasClass('active'))
            return;
        $('#tabs').children('li').each(function() {
            (this.id === tabId) && $('#' + this.id).addClass('active') || $('#' + this.id).removeClass('active');
        });
        requests.doRequest({ url: url, divResult: '#assetPage' });
    }
    selectTab('generalSettings', '@Url.Action("GeneralSettings")');
</script>