@using BackOffice.Translates
@model BackOffice.Areas.LykkePay.Models.Assets.AddMerchantSettingDialogViewModel

@{
    Layout = "~/Views/Shared/_PersonalAreaDialog.cshtml";
}

<form id="frmAddMerchantSetting" autocomplete="off">
    @Html.HiddenFor(x => x.MerchantId)
    <div id="errorMessage"></div>
    <div>Please, enter asset(s) divided by semicolon. For example "USD;EUR;BTC"</div>
    <div class="form-group">
        @Html.RenderInputWithLabelOnTop("PaymentAssets", "PaymentAssets", Model.PaymentAssets)
    </div>
    <div class="form-group">
        @Html.RenderInputWithLabelOnTop("SettlementAssets", "SettlementAssets", Model.SettlementAssets)
    </div>
</form>

@Html.RenderSaveCancelButtonPair(Url.Action("AddMerchantSetting"), "#frmAddMerchantSetting")