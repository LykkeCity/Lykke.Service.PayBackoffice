@using BackOffice.Models
@model BackOffice.Areas.LykkePay.Models.AssetByMerchantViewModel

@{
    IEnumerable<ItemViewModel> merchantList = Model.Merchants.
        Select(m => new ItemViewModel { Id = m.Id, Title = m.Name }).ToArray();
}
<div class="row" style="margin-left: 30px">
    <h1>Assets by merchants</h1>
    <div class="col-md-2">
        <a class="btn btn btn-success"
           onclick="openDialog();">
            Add
        </a>
    </div>
</div>
<hr />
<form id="frmAssetByMerchant">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 input-lg">
            @Html.RenderSelect2("Merchant:", "SelectedMerchant", merchantList, false, "Select merchant...")
        </div>
    </div>
</form>
<div id="assetByMerchantList"></div>
<script>
    $(function () {
            var $merchantSelect = $('#selectedMerchant');
            $merchantSelect.select2().on("change",
                function (e) {
                    requests.doRequest({
                        url: '@Url.Action("AssetByMerchantList")',
                        formId: '#frmAssetByMerchant',
                        divResult: '#assetByMerchantList'
                    });
                });
            $('.select2-container--default').width(200);
        });
        function openDialog()
        {
            var $merchantSelect = $('#selectedMerchant');
            ui.showDialog('@Url.Action("AddOrEditStaffDialog")', { merchant: $merchantSelect.val() });
        }
    $(function () {
        requests.doRequest({ url: '@Url.Action("AssetByMerchantList")', formId: '#frmAssetByMerchant', divResult: '#assetByMerchantList' });
        });
    function openDialog()
        {
            var $merchantSelect = $('#selectedMerchant');
            ui.showDialog('@Url.Action("AddAssetByMerchantDialog")', { merchant: $merchantSelect.val() });
        }
</script>