@using BackOffice.Translates
@model BackOffice.Areas.LykkePay.Models.BtctransfersListViewModel

@if (Model.List != null && Model.List.Any())
{
    <table class="table table-striped">
        <tr>
            <th></th>
            <th>
                DueDate
            </th>
            <th>
                Amount
            </th>
            <th>
                WalletAddress
            </th>
            <th>
                Asset
            </th>
            <th>
                Transactions amount
            </th>
            @*<th></th>*@
        </tr>

        @foreach (var item in Model.List)
        {
            <tr>
                <td>
                    @Html.RenderCheckbox(@item.PaymentRequest.WalletAddress, "", false)
                </td>
                <td>
                    @item.PaymentRequest.DueDate
                </td>
                <td>
                    @item.PaymentRequest.Amount
                </td>
                <td>
                    @item.PaymentRequest.WalletAddress
                </td>
                <td>
                    @item.AssetId
                </td>
                <td>
                    <input type="hidden" id="walletamount_@item.PaymentRequest.WalletAddress" value="@item.Amount"/>
                    @item.Amount
                </td>
                @*<td style="text-align: right">
                    <button class="btn btn-xs btn-default btn-raised"
                            onclick="ui.showDialog('@Url.Action("TransferMoneyDialog")', { Id: '@item.Id', merchant: '@item.MerchantId' });">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </td>*@
            </tr>
        }
    </table>

    <script>
        $(function() {
            $('#SelectedMerchant').val('@Model.SelectedMerchant');
        });
    </script>
}
else
{
    <p>@Phrases.NoRecordsFound</p>
}