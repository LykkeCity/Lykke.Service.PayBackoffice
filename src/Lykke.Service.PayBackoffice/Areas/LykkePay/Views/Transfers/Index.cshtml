
@using BackOffice.Translates

<ul id="tabs" class="nav nav-tabs">
    <li id="transfers"><a data-toggle="tab" onclick="selectTab(this.parentNode.id, '@Url.Action("TransfersPage")')">Transfers</a></li>
</ul>

<div id="TransfersPage" style="margin: 10px"></div>

<script>
    function selectTab(tabId, url) {
        if ($('#' + tabId).hasClass('active'))
            return;
        $('#tabs').children('li').each(function() {
            (this.id === tabId) && $('#' + this.id).addClass('active') || $('#' + this.id).removeClass('active');
        });
        requests.doRequest({ url: url, divResult: '#TransfersPage' });
    }
    selectTab('transfers', '@Url.Action("TransfersPage")');
</script>