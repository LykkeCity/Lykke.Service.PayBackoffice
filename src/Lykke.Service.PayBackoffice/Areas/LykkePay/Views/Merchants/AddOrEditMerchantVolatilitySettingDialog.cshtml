@using BackOffice.Translates
@model BackOffice.Areas.LykkePay.Models.Merchants.AddOrEditMerchantVolatilitySettingsDialog

@{
    Layout = "~/Views/Shared/_PersonalAreaDialog.cshtml";
}

<form id="frmMerchantVolatilitySetting" autocomplete="off" style="max-height: 700px;overflow: auto;">
    @Html.HiddenFor(x => x.MerchantId)
    @Html.HiddenFor(x => x.IsNew)
    <div id="errorMessage"></div>
    <div>Please, enter asset pair(s) divided by semicolon. For example "BTCUSD;PKTUSD"</div>
    <div class="form-group">
        @Html.RenderInputWithLabelOnTop("ZeroCoverageAssetPairs", "ZeroCoverageAssetPairs", Model.ZeroCoverageAssetPairs, focused: true)
    </div>
</form>

@Html.RenderSaveCancelButtonPair(Url.Action("AddOrEditMerchantVolatilitySetting"), "#frmMerchantVolatilitySetting")