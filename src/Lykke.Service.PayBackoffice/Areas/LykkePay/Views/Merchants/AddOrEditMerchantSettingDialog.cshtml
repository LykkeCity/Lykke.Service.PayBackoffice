@using BackOffice.Translates
@model BackOffice.Areas.LykkePay.Models.Merchants.AddOrEditMerchantSettingDialog

@{
    Layout = "~/Views/Shared/_PersonalAreaDialog.cshtml";
}

<form id="frmMerchantSetting" autocomplete="off" style="max-height: 700px;overflow: auto;">
    @Html.HiddenFor(x => x.MerchantId)
    <div id="errorMessage"></div>
    <div class="form-group">
        @Html.RenderInputWithLabelOnTop("BaseAsset", "BaseAsset", Model.BaseAsset, focused: true)
    </div>
</form>

@Html.RenderSaveCancelButtonPair(Url.Action("AddOrEditMerchantSetting"), "#frmMerchantSetting")