
@using BackOffice.Translates

<ul id="tabs" class="nav nav-tabs">
    <li id="btctransfers"><a data-toggle="tab" onclick="selectTab(this.parentNode.id, '@Url.Action("BtcTransfersPage")')">BTC transfers</a></li>
</ul>

<div id="BtcTransfersPage"></div>

<script>
    function selectTab(tabId, url) {
        if ($('#' + tabId).hasClass('active'))
            return;
        $('#tabs').children('li').each(function() {
            (this.id === tabId) && $('#' + this.id).addClass('active') || $('#' + this.id).removeClass('active');
        });
        requests.doRequest({ url: url, divResult: '#BtcTransfersPage' });
    }
    selectTab('btctransfers', '@Url.Action("BtcTransfersPage")');
</script>