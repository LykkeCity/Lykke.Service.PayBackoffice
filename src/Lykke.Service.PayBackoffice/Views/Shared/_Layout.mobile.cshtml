@using BackOffice
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0,user-scalable=no,width=device-width">
    <link href="~/images/favicon.png" rel="shortcut icon" type="image/png" />
    <title>Lykke Back Office</title>
    <environment names="Development">
        @Bundler.Unpack("wwwroot/output/mobile-site.min.css")
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/output/mobile-site.min.css" asp-append-version="true" />
    </environment>
    <environment names="Development">
        @Bundler.Unpack("wwwroot/output/mobile-site.min.js")
    </environment>
    <environment names="Staging,Production">
        <script src="~/output/mobile-site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("header", required: false)

    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body style="overflow: hidden; background: white;">
    @Html.Partial("PartialInitScriptMobile")
<div class="header">
    <table style="width: 100%;">
        <tr>
            <td style="width: 40px;">
                <div id="btnMnu" class="btn-menu" style="display: none;" onclick="ui.menuClick()">
                    <span class="glyphicon glyphicon-menu-hamburger btn-menu" aria-hidden="true"></span>
                </div>
            </td>
            <td>
                <span>Lykke Back Office</span> 
            </td>
        </tr>

    </table>
</div>
<div id="rootContent">
    <table id="msrtDtl" style="height: 100%">
        <tr>
            <td>
                <div id="pamain" style="overflow-y: auto">
                    @RenderBody()
                </div>
            </td>
            <td>
                <div id="detail" style="overflow-y: auto">

                </div>
            </td>
        </tr>
    </table> 
</div>


<div id="dialogPad" style="display: none;" onclick="ui.padClick()">
    <div id="dialog" class="well page active" style="display: none;">
        
    </div>
</div>
<div id="mainMenu" style="display: none; overflow-y: auto;" onclick="ui.menuClick()">
    <div id="mnuLogo" style="padding: 6px;">
        <img src="~/images/logo-white.png" style="width: 100%;"/>
    </div>
    <div id="mnuContent"></div>
</div>
<script>
    ui.ressize();
</script>
</body>
</html>
