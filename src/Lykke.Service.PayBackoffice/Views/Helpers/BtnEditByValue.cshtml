@model EditByValueModel

@{
    var valueFieldName = Model.ValueFieldName == null ? "value" : Model.ValueFieldName;
    var oldValueFieldName = $"old{new System.Globalization.CultureInfo("en-US").TextInfo.ToTitleCase(valueFieldName)}";

    <button class="btn btn-success btn-xs"
            onclick="ui.showDialog('@Model.Url', { @valueFieldName: '@Model.Value' })">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </button>
}
